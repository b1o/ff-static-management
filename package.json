{
	"name": "ff14-static-hub",
	"private": true,
	"scripts": {
		"build:types": "bun --filter @ff-static/api build:types",
		"dev:server": "bun --filter @ff-static/api dev",
		"dev:web": "cd packages/web && bun start",
		"dev": "concurrently \"bun --filter @ff-static/api dev\" \"bun --filter web start\"",
		"postinstall": "bun run build:types",
		"db:generate": "bun --filter @ff-static/api db:generate",
		"db:migrate": "bun --filter @ff-static/api db:migrate"
	},
	"devDependencies": {
		"bun-types": "^1.3.5",
		"concurrently": "^9.2.1",
		"typescript": "^5.3.0"
	},
	"workspaces": [
		"packages/*"
	]
}
