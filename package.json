{
	"name": "ff14-static-hub",
	"private": true,
	"scripts": {
		"dev:server": "bun --filter server dev",
		"dev:web": "cd packages/web && bun start",
		"db:generate": "bun --filter server db:generate",
		"db:migrate": "bun --filter server db:migrate",
		"dev": "concurrently \"bun --filter server dev\" \"bun --filter web start\""
	},
	"devDependencies": {
		"bun-types": "^1.3.5",
		"concurrently": "^9.2.1",
		"typescript": "^5.3.0"
	},
	"workspaces": [
		"packages/*"
	]
}
